{
  "name": "todo-playground",
  "version": "0.0.1",
  "description": "Playground for API experimentation",
  "main": "index.js",
  "type": "module",
  "exports": "./dist/index.js",
  "engines": {
    "node": "16"
  },
  "volta": {
    "node": "16.13.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "nodemon --watch './**/*.{ts,graphql}' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "dev": "tsc-watch --onSuccess \"npm run watch\"",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "start": "node dist/index.js",
    "tdd": "jest --watch",
    "test": "jest"
  },
  "author": "Stephen",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongodb": "^4.2.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.9",
    "@types/supertest": "^2.0.11",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.5.2"
  }
}
